//- SITE FOOTER
footer.site-footer.site-footer--sticky: .container
	.row
		.col-sm-4
			h5.footer-heading About
			p keystone-starter footer text 
			ul.list-inline
				li: a(href='/about') More about keystone-starter
				li: a(href='mailto:keystone-starter@gmail.com') Contact us

		.col-sm-8
			.row
				.col-xs-4
					h5.footer-heading Members
					ul
						li: a(href='/members') Members
						li: a(href='/mentoring') Mentoring
						li: a(href='/members/mentors') Mentors
						if !user
							li: a(href='/signup').js-auth-trigger Become a Member
				.col-xs-4
					h5.footer-heading Resources
					ul
						li: a(href='/organisations') Organisations
						li: a(href='/links') Links
						li: a(href='/showbag') Showbag
				.col-xs-4
					h5.footer-heading Sponsors
					ul: each sponsor in sponsors
						li 
							a(href= sponsor.website, rel='external')= sponsor.name 
							i
	.row.footer-copyright
		p Copyright &copy; 2016 keystone-starter. Powered by <a href='http://keystonejs.com' rel='external'>KeystoneJS</a>.
		p If you run a meetup, please feel free to clone our site and make your own! You can <a href="https://github.com/gautamsi/keystone-starter" rel='external'>find it on GitHub</a>.
